<div class="card bg-light text-dark">
  <div class="card-body">
    <h1 class="card-title fw-bold fs-3 mb-4">マイページ</h1>

    <ul class="nav nav-tabs" id="mypageTab" role="tablist">
      <li class="nav-item" role="presentation">
        <button class="nav-link active" id="profile-tab" data-bs-toggle="tab" data-bs-target="#profile"
                type="button" role="tab" aria-controls="profile" aria-selected="true">
          プロフィール
        </button>
      </li>
      <li class="nav-item" role="presentation">
        <button class="nav-link" id="reviews-tab" data-bs-toggle="tab" data-bs-target="#reviews"
                type="button" role="tab" aria-controls="reviews" aria-selected="false">
          投稿レビュー
        </button>
      </li>
      <li class="nav-item" role="presentation">
        <button class="nav-link" id="favorites-tab" data-bs-toggle="tab" data-bs-target="#favorites"
                type="button" role="tab" aria-controls="favorites" aria-selected="false">
          お気に入り店舗
        </button>
      </li>
    </ul>

    <div class="tab-content mt-3" id="mypageTabContent">
      <div class="tab-pane fade show active" id="profile" role="tabpanel" aria-labelledby="profile-tab">
        <p><strong>名前:</strong> <%= @user.name %></p>
        <p><strong>メール:</strong> <%= @user.email %></p>
        <%= link_to "プロフィールを編集", edit_user_registration_path, class: "btn btn-warning mt-3" %>
      </div>

      <div class="tab-pane fade" id="reviews" role="tabpanel" aria-labelledby="reviews-tab">
        <h2 class="h5 mb-3">📝 投稿したレビュー</h2>
        <% if @reviews.any? %>
          <%= render @reviews %>
        <% else %>
          <p>レビューはまだありません。</p>
        <% end %>
      </div>

      <div class="tab-pane fade" id="favorites" role="tabpanel" aria-labelledby="favorites-tab">
        <h2 class="h5 mb-3">⭐ お気に入り店舗</h2>
        <% if @favorite_shops.any? %>
          <div class="row">
            <%= render partial: "shops/shop_card", collection: @favorite_shops, as: :shop %>
          </div>
        <% else %>
          <p>お気に入り登録はまだありません。</p>
        <% end %>
      </div>
    </div>
  </div>
</div>

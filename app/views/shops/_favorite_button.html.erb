<% if current_user.favorite_shops.include?(shop) %>
  <%= button_to "お気に入り解除", shop_favorite_path(shop), method: :delete, data: { turbo_stream: true }, class: "btn btn-outline-warning" %>
<% else %>
  <%= button_to "お気に入り登録", shop_favorite_path(shop), method: :post, data: { turbo_stream: true }, class: "btn btn-warning" %>
<% end %>

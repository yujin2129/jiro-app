<div class="col-md-4 mb-3">
  <div class="card bg-light text-dark h-100">
    <% if shop.image.attached? %>
      <%= image_tag shop.image.variant(resize_to_limit: [400, 250]), class: "card-img-top" %>
    <% end %>
    <div class="card-body">
      <h5 class="card-title"><%= shop.name %></h5>
      <p class="card-text"><%= truncate(shop.address, length: 40) %></p>
      <%= link_to "詳細を見る", shop_path(shop), class: "btn btn-sm btn-outline-warning" %>
    </div>
  </div>
</div>

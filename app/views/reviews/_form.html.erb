<div class="container mt-4">
  <%= render "shared/error_messages", object: review %>
  <div class="card p-4 border border-dark bg-light-subtle">
    <h3 class="mb-3 font-jiro">
      <i class="bi bi-chat-dots-fill me-2"></i>
      <%= review.persisted? ? "レビューを編集" : "レビューを投稿" %>
    </h3>

    <%= form_with model: [shop, review], local: true do |f| %>
      <div class="mb-3">
        <%= f.label :rating, class: "form-label fw-bold" %>
        <div class="star-rating-input">
          <% 5.times do |i| %>
            <%= f.radio_button :rating, i + 1, id: "rating_#{i+1}" %>
            <label for="rating_<%= i+1 %>">★</label>
          <% end %>
        </div>
      </div>

      <div class="mb-3">
        <%= f.label :content, class: "form-label fw-bold" %>
        <%= f.text_area :content, class: "form-control", rows: 4 %>
      </div>

      <div class="mb-3">
        <%= f.label :images, class: "form-label fw-bold" %>
        <div class="border rounded p-3 bg-white text-center">
          <i class="bi bi-images display-6 text-muted"></i>
          <p class="mb-1 text-muted small">店舗外観やメニュー写真をアップロードできます</p>
          <%= f.file_field :images, multiple: true, accept: "image/*", class: "form-control" %>
        </div>
      </div>

      <div class="d-flex justify-content-between">
        <%= link_to "戻る", shop_path(shop), class: "btn btn-outline-dark" %>
        <%= f.submit review.persisted? ? "更新する" : "投稿する", class: "btn btn-warning px-4" %>
      </div>
    <% end %>
  </div>
</div>

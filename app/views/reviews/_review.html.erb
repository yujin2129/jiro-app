<div class="card mb-2 bg-light border border-dark">
  <div class="card-body p-2">
    <div class="d-flex justify-content-between">
      <div>
        <strong><%= review.user.name %></strong>
        <span class="ms-2"><%= render "shops/star_rating", rating: review.rating %></span>
      </div>
      <small class="text-muted">
        <%= l(review.created_at, format: :short) %>
      </small>
    </div>

    <p class="mb-0"><%= review.content %></p>

    <% if review.persisted? && review.images.attached? %>
      <div class="mt-2 d-flex flex-wrap">
        <% review.images.each do |image| %>
          <%= image_tag image.variant(resize_to_limit: [200, 200]),
                class: "img-thumbnail me-2 mb-2" %>
        <% end %>
      </div>
    <% end %>

    <% if user_signed_in? && review.user == current_user %>
      <div class="mt-2 d-flex">
        <%= link_to "編集", edit_shop_review_path(review.shop, review),
                    class: "btn btn-sm btn-outline-secondary me-1" %>
        <%= button_to "削除", shop_review_path(review.shop, review),
                      method: :delete,
                      data: { turbo_confirm: "本当に削除しますか？" },
                      class: "btn btn-sm btn-outline-danger" %>
      </div>
    <% end %>
  </div>
</div>

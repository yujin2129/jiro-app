<div class="card mb-3 border border-dark bg-light">
  <div class="card-body">
    <div class="d-flex justify-content-between align-items-center mb-1">
      <small class="text-muted">
        投稿者: <strong><%= review.user.name %></strong>
      </small>
      <small class="text-muted">
        <%= l(review.created_at, format: :short) %>
      </small>
    </div>

    <div class="d-flex justify-content-between align-items-center mb-2">
      <h5 class="mb-0">
        <%= link_to review.shop.name, shop_path(review.shop),
                    class: "text-decoration-none text-primary fw-bold" %>
      </h5>
      <div>
        <%= render "shops/star_rating", rating: review.rating %>
      </div>
    </div>

    <p class="mb-2"><%= review.content %></p>

    <% if review.persisted? && review.images.attached? %>
      <div class="mt-2 d-flex flex-wrap gap-2">
        <% review.images.each do |image| %>
          <%= image_tag image.variant(resize_to_limit: [200, 200]),
                class: "img-thumbnail" %>
        <% end %>
      </div>
    <% end %>

    <% if user_signed_in? && review.user == current_user %>
      <div class="mt-3 d-flex">
        <%= link_to "編集", edit_shop_review_path(review.shop, review),
                    class: "btn btn-sm btn-outline-secondary me-2" %>
        <%= button_to "削除", shop_review_path(review.shop, review),
                      method: :delete,
                      data: { turbo_confirm: "本当に削除しますか？" },
                      class: "btn btn-sm btn-outline-danger" %>
      </div>
    <% end %>
  </div>
</div>

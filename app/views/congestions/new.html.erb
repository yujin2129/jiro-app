<div class="container mt-4">
  <%= render "shared/error_messages", object: @congestion %>
  <div class="card p-4 border border-dark bg-warning-light">
    <h3 class="mb-3 font-jiro"><i class="bi bi-people-fill me-2"></i>混雑情報を投稿</h3>

    <%= form_with model: [@shop, @congestion], local: true do |f| %>
      <div class="mb-3">
        <%= f.label :visited_on, class: "form-label fw-bold" %>
        <%= f.date_field :visited_on, class: "form-control" %>
      </div>

      <div class="mb-3">
        <%= f.label :visited_time, class: "form-label fw-bold" %>
        <%= f.select :visited_time, Congestion::VISITED_TIME_SLOTS, {}, class: "form-control" %>
      </div>

      <div class="mb-3">
        <%= f.label :level, class: "form-label fw-bold" %>
        <%= f.select :level, options_for_select([
            ["空席あり", 1],
            ["満席近い", 2],
            ["〜30分待ち", 3],
            ["30分〜1時間待ち", 4],
            ["1時間〜待ち", 5]
          ]), {}, class: "form-control" %>
      </div>

      <div class="d-flex justify-content-between">
        <%= link_to "戻る", (request.referer || shop_path(@shop)), class: "btn btn-outline-dark" %>
        <%= f.submit "投稿する", class: "btn btn-dark px-4" %>
      </div>
    <% end %>
  </div>
</div>
